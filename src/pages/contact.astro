<Layout title="Contact Us">
  <div class="hero">
    <div class="container">
      <h1>Contact Us</h1>
      <p>We'd love to hear from you</p>
    </div>
  </div>

  <section class="section">
    <div class="container">
      <div class="contact-info">
        <div class="contact-box">
